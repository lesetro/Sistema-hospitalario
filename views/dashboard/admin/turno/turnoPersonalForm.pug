extends ../dashboard/admin/dashboard-admin.pug


block content
    .container.mt-4
      if error
        .alert.alert-danger= error
      h1 Nuevo Turno Personal
      form(method='POST' action='/turnos/personal' novalidate)
        .mb-3
          label.form-label(for='fecha') Fecha
          input#fecha.form-control(type='datetime-local' name='fecha' required)
        .mb-3
          label.form-label(for='personal_id') Personal
          select#personal_id.form-control(name='personal_id' required)
            option(value='') Seleccione personal
            - if (typeof personal !== 'undefined')
              each p in personal
                option(value=p.id)= p.nombre
        button.btn.btn-custom(type='submit') Guardar
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    script(src='/js/admin/script.js')