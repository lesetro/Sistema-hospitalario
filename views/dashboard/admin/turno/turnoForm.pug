extends ../dashboard/admin/dashboard-admin.pug


block content
    .container.mt-4
      if error
        .alert.alert-danger= error
      h1 Nuevo Turno
      form(method='POST' action='/turnos' novalidate)
        .mb-3
          label.form-label(for='fecha') Fecha
          input#fecha.form-control(type='datetime-local' name='fecha' required)
        .mb-3
          label.form-label(for='medico_id') Médico
          select#medico_id.form-control(name='medico_id' required)
            option(value='') Seleccione un médico
            - if (typeof medicos !== 'undefined')
              each medico in medicos
                option(value=medico.id)= medico.nombre
        .mb-3
          label.form-label(for='enfermero_id') Enfermero
          select#enfermero_id.form-control(name='enfermero_id' required)
            option(value='') Seleccione un enfermero
            - if (typeof enfermeros !== 'undefined')
              each enfermero in enfermeros
                option(value=enfermero.id)= enfermero.nombre
        button.btn.btn-custom(type='submit') Guardar
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    script(src='/js/script.js')