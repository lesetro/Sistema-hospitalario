extends ../dashboard/admin/dashboard-admin.pug

block content
    .container.mt-4
      h1 Lista de Turnos
      a.btn.btn-custom.mb-3(href='/turnos/new') Nuevo Turno
      table.table
        thead
          tr
            th Fecha
            th MÃ©dico
            th Enfermero
            th Acciones
        tbody
          each turno in turnos
            tr
              td= turno.fecha
              td= turno.medico_nombre
              td= turno.enfermero_nombre
              td
                a.btn.btn-info.btn-sm(href=`/turnos/${turno.id}`) Ver
                a.btn.btn-warning.btn-sm.ml-2(href=`/turnos/${turno.id}/edit`) Editar
                form(method='POST' action=`/turnos/${turno.id}` style='display:inline;')
                  input(type='hidden' name='_method' value='DELETE')
                  button.btn.btn-danger.btn-sm(type='submit') Eliminar
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    script(src='/js/script.js')