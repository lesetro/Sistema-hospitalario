extends ../dashboard/admin/dashboard-admin.pug


block content
    .container.mt-4
      if error
        .alert.alert-danger= error
      h1 Nuevo Médico
      form(method='POST' action='/medicos' novalidate)
        .mb-3
          label.form-label(for='dni') DNI
          input#dni.form-control(type='text' name='dni' required)
        .mb-3
          label.form-label(for='nombre') Nombre
          input#nombre.form-control(type='text' name='nombre' required)
        .mb-3
          label.form-label(for='email') Correo Electrónico
          input#email.form-control(type='email' name='email' required)
        button.btn.btn-custom(type='submit') Guardar
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    script(src='/js/script.js')