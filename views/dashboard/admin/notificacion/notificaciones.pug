extends ../dashboard/admin/dashboard-admin.pug


block content
    .container.mt-4
      h1 Notificaciones
      table.table
        thead
          tr
            th Mensaje
            th Leída
            th Acciones
        tbody
          each notificacion in notificaciones
            tr
              td= notificacion.mensaje
              td= notificacion.leida ? 'Sí' : 'No'
              td
                if !notificacion.leida
                  form(method='POST' action=`/notificaciones/${notificacion.id}` style='display:inline;')
                    input(type='hidden' name='_method' value='PUT')
                    button.btn.btn-success.btn-sm(type='submit') Marcar como leída
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    script(src='/js/script.js')