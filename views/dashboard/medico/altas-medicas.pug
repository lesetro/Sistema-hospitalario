extends layout

block content
  .container-fluid.py-4
    .row
      .col-12
        .page-header.mb-4
          h2
            i.fas.fa-sign-out-alt.me-2
            | Altas Médicas
          p.text-muted Registra y gestiona las altas médicas de tus pacientes

    // Estadísticas
    .row.g-3.mb-4#estadisticas-altas
      .col-lg-3.col-md-6
        .card.border-start.border-primary.border-4
          .card-body
            .d-flex.justify-content-between
              div
                small.text-muted Total Altas
                h3.mb-0.text-primary#stat-total
                  .spinner-border.spinner-border-sm
              i.fas.fa-sign-out-alt.fa-2x.text-primary
      
      .col-lg-3.col-md-6
        .card.border-start.border-info.border-4
          .card-body
            .d-flex.justify-content-between
              div
                small.text-muted Este Mes
                h3.mb-0.text-info#stat-mes
                  .spinner-border.spinner-border-sm
              i.fas.fa-calendar-alt.fa-2x.text-info
      
      .col-lg-3.col-md-6
        .card.border-start.border-warning.border-4
          .card-body
            .d-flex.justify-content-between
              div
                small.text-muted Esta Semana
                h3.mb-0.text-warning#stat-semana
                  .spinner-border.spinner-border-sm
              i.fas.fa-calendar-week.fa-2x.text-warning
      
      .col-lg-3.col-md-6
        .card.border-start.border-success.border-4
          .card-body
            .d-flex.justify-content-between
              div
                small.text-muted Hoy
                h3.mb-0.text-success#stat-hoy
                  .spinner-border.spinner-border-sm
              i.fas.fa-calendar-day.fa-2x.text-success

    // Pendientes de Alta
    .row.mb-4
      .col-12
        .card.shadow-sm
          .card-header.bg-white
            h5.mb-0
              i.fas.fa-clock.me-2
              | Pendientes de Alta
          .card-body
            #loading-pendientes.text-center.py-4
              .spinner-border.text-primary
              p.mt-2.text-muted Cargando...
            #lista-pendientes.d-none

    // Filtros
    .row
      .col-12
        .card.shadow-sm
          .card-header.bg-white
            h5.mb-0
              i.fas.fa-filter.me-2
              | Filtros de Búsqueda
          .card-body
            form#formFiltros
              .row.g-3
                .col-md-3
                  label.form-label
                    i.fas.fa-user.me-1
                    | Paciente
                  select.form-select(id='filtroPaciente' name='pacienteId')
                    option(value='') Todos
                
                .col-md-2
                  label.form-label
                    i.fas.fa-list.me-1
                    | Tipo de Alta
                  select.form-select(id='filtroTipoAlta' name='tipoAlta')
                    option(value='TODOS') Todos
                    option(value='Voluntaria') Voluntaria
                    option(value='Medica') Médica
                    option(value='Contraindicada') Contraindicada
                
                .col-md-2
                  label.form-label
                    i.fas.fa-heartbeat.me-1
                    | Estado Paciente
                  select.form-select(id='filtroEstado' name='estadoPaciente')
                    option(value='TODOS') Todos
                    option(value='Estable') Estable
                    option(value='Grave') Grave
                    option(value='Critico') Crítico
                    option(value='Fallecido') Fallecido
                
                .col-md-2
                  label.form-label
                    i.fas.fa-calendar.me-1
                    | Desde
                  input.form-control(
                    type='date'
                    id='filtroFechaDesde'
                    name='fechaDesde'
                  )
                
                .col-md-2
                  label.form-label
                    i.fas.fa-calendar.me-1
                    | Hasta
                  input.form-control(
                    type='date'
                    id='filtroFechaHasta'
                    name='fechaHasta'
                  )
                
                .col-md-1.d-flex.align-items-end
                  button.btn.btn-primary.w-100(type='submit')
                    i.fas.fa-search

      .col-12.mt-4
        .card.shadow-sm
          .card-header.bg-white.d-flex.justify-content-between.align-items-center
            h5.mb-0
              i.fas.fa-list.me-2
              | Listado de Altas Médicas
            div
              button.btn.btn-sm.btn-success.me-2(onclick='mostrarModalNuevaAlta()')
                i.fas.fa-plus.me-2
                | Nueva Alta
              button.btn.btn-sm.btn-outline-primary(onclick='actualizarTabla()')
                i.fas.fa-sync-alt.me-2
                | Actualizar
          
          .card-body
            #loading-altas.text-center.py-4
              .spinner-border.text-primary
              p.mt-2.text-muted Cargando altas...
            
            #tabla-altas.d-none
              .table-responsive
                table.table.table-hover.align-middle
                  thead
                    tr
                      th Paciente
                      th Tipo de Alta
                      th Estado Paciente
                      th Fecha Alta
                      th Origen
                      th Acciones
                  tbody#tbody-altas
              
              // Paginación
              nav.mt-3
                ul.pagination.justify-content-center#paginacion

  // Modal Nueva Alta
  #modalNuevaAlta.modal.fade(tabindex='-1')
    .modal-dialog.modal-lg
      .modal-content
        .modal-header.bg-success.text-white
          h5.modal-title
            i.fas.fa-plus-circle.me-2
            | Registrar Alta Médica
          button.btn-close.btn-close-white(data-bs-dismiss='modal')
        .modal-body
          form#formNuevaAlta
            .row.g-3
              .col-md-6
                label.form-label Paciente ID *
                input.form-control(
                  type='number'
                  id='nuevoPacienteId'
                  name='paciente_id'
                  required
                )
              
              .col-md-6
                label.form-label Tipo de Alta *
                select.form-select(id='nuevoTipoAlta' name='tipo_alta' required)
                  option(value='') Seleccione tipo
                  option(value='Voluntaria') Voluntaria
                  option(value='Medica') Médica
                  option(value='Contraindicada') Contraindicada
              
              .col-md-6
                label.form-label Internación ID
                input.form-control(
                  type='number'
                  id='nuevaInternacionId'
                  name='internacion_id'
                  placeholder='ID de internación (si aplica)'
                )
              
              .col-md-6
                label.form-label Admisión ID
                input.form-control(
                  type='number'
                  id='nuevaAdmisionId'
                  name='admision_id'
                  placeholder='ID de admisión (si aplica)'
                )
                small.text-muted Debe especificar internación o admisión
              
              .col-md-12
                label.form-label Estado del Paciente al Alta *
                select.form-select(id='nuevoEstadoPaciente' name='estado_paciente' required)
                  option(value='') Seleccione estado
                  option(value='Estable') Estable
                  option(value='Grave') Grave
                  option(value='Critico') Crítico
                  option(value='Fallecido') Fallecido
              
              .col-md-12
                label.form-label Instrucciones Post-Alta
                textarea.form-control(
                  id='nuevasInstrucciones'
                  name='instrucciones_post_alta'
                  rows='6'
                  placeholder='Indicaciones para el paciente después del alta: medicación, cuidados, controles, etc.'
                )
        .modal-footer
          button.btn.btn-secondary(data-bs-dismiss='modal') Cancelar
          button.btn.btn-success(type='submit' form='formNuevaAlta')
            i.fas.fa-save.me-2
            | Registrar Alta

  // Modal Detalle
  #modalDetalle.modal.fade(tabindex='-1')
    .modal-dialog.modal-xl
      .modal-content
        .modal-header
          h5.modal-title
            i.fas.fa-info-circle.me-2
            | Detalle del Alta Médica
          button.btn-close(data-bs-dismiss='modal')
        .modal-body#modalDetalleBody
          .text-center.py-4
            .spinner-border.text-primary
        .modal-footer
          button.btn.btn-secondary(data-bs-dismiss='modal') Cerrar
          button.btn.btn-primary(onclick='imprimirAlta()')
            i.fas.fa-print.me-2
            | Imprimir

block scripts
  script(src='/js/medico/altas-medicas.js')
