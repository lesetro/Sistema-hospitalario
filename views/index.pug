extends ./layouts/layout

block navbar
  if user && user.rol
    if user.rol === 'AdministradorCentral' || user.rol === 'AdministradorGeneral'
      include ./layouts/adminNavbar
    else if user.rol === 'Medico'
      include ./layouts/medicoNavbar
    else if user.rol === 'Enfermero'
      include ./layouts/enfermeroNavbar
    else if user.rol === 'Paciente'
      include ./layouts/pacienteNavbar
    else
      include ./layouts/navbar
  else
    include ./layouts/navbar

block content
  .text-center.mb-4
    img(src="data:image/jpeg;base64,")
    h1.mt-4 Bienvenidos al Sistema Hospitalario
    p.lead Gestión integral para pacientes, médicos y administradores. Inicia sesión para acceder a tus servicios.
    a(href="/auth/login" class="btn btn-custom btn-lg mt-3") Iniciar Sesión

  section.mt-5
    h2.text-center.mb-4 Noticias Recientes
    if noticias && noticias.length
      .row
        each noticia in noticias
          .col-md-6.mb-4
            .card.card-custom.news-card
              .card-body
                h5.card-title= noticia.titulo
                p.card-text= noticia.contenido
                p.card-text
                  small.text-muted= noticia.fecha
    else
      p.text-center No hay noticias disponibles.

block scripts
  // Scripts ya incluidos en layout.pug, no es necesario repetirlos