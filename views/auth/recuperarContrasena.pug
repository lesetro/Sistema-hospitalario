extends ../layouts/layout

block content
  .container.mt-4
    if error
      .alert.alert-danger= error
    h1.text-center Recuperar Contraseña
    form(method='POST' action='/auth/recuperarContrasena' novalidate)
      .mb-3
        label.form-label(for='email') Correo Electrónico
        input#email.form-control(type='email' name='email' required)
      .mb-3
        label.form-label(for='newPassword') Nueva Contraseña
        input#newPassword.form-control(type='password' name='newPassword' required)
      button.btn.btn-custom(type='submit') Recuperar