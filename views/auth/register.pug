extends ../layouts/layout

block content
  .row.justify-content-center
    .col-md-8.col-lg-7
      .card.mt-5
        .card-body.p-4
          h2.text-center.mb-4
            i.bi.bi-person-plus.me-2
            | Registrar Usuario
          
          if error
            .alert.alert-danger.alert-dismissible.fade.show(role="alert")
              | #{error}
              button.btn-close(type="button" data-bs-dismiss="alert")
          
          if success
            .alert.alert-success.alert-dismissible.fade.show(role="alert")
              | #{success}
              button.btn-close(type="button" data-bs-dismiss="alert")
          
          form(method="POST" action="/auth/register")
            .row
              .col-md-6.mb-3
                label.form-label(for="dni")
                  i.bi.bi-person-badge.me-1
                  | DNI
                input#dni.form-control(
                  type="text", 
                  name="dni", 
                  required,
                  placeholder="Ej: 12345678",
                  minlength="7",
                  maxlength="8"
                )
              
              .col-md-6.mb-3
                label.form-label(for="nombre")
                  i.bi.bi-person.me-1
                  | Nombre Completo
                input#nombre.form-control(
                  type="text", 
                  name="nombre", 
                  required,
                  placeholder="Ej: Juan Pérez"
                )
            
            .mb-3
              label.form-label(for="email")
                i.bi.bi-envelope.me-1
                | Correo Electrónico
              input#email.form-control(
                type="email", 
                name="email", 
                required,
                placeholder="usuario@ejemplo.com"
              )
            
            .mb-3
              label.form-label(for="password")
                i.bi.bi-key.me-1
                | Contraseña
              input#password.form-control(
                type="password", 
                name="password", 
                required,
                placeholder="Mínimo 6 caracteres",
                minlength="6"
              )
            
            .mb-3
              label.form-label(for="rol")
                i.bi.bi-person-rolodex.me-1
                | Rol
              select#rol.form-select(name="rol", required)
                option(value="") Selecciona un rol
                option(value="Paciente") Paciente
                option(value="Enfermero") Enfermero
                option(value="Medico") Médico
                option(value="AdministradorCentral") Administrador Central
                option(value="Limpieza") Personal de Limpieza
                option(value="AdministradorGeneral") Administrador General
            
            .mb-3
              label.form-label(for="hospital_id")
                i.bi.bi-hospital.me-1
                | Hospital
              select#hospital_id.form-select(name="hospital_id", required)
                option(value="") Selecciona un hospital
                option(value="1") Hospital Juan Domingo Perón
                option(value="2") Hospital de la Villa
                option(value="3") Hospital Bailoni
                option(value="4") Hospital de la Rivera
                option(value="5") Hospital la Merced
            
            .d-grid.mt-4
              button.btn.btn-custom(type="submit")
                i.bi.bi-person-plus.me-2
                | Crear Cuenta
            
            .text-center.mt-3
              p
                | ¿Ya tienes cuenta? 
                a(href="/auth/login") Inicia sesión aquí