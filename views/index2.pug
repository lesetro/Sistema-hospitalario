html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Sistema Hospitalario
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
    link(rel='stylesheet' href='/css/styles.css')
  body
    #app
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        .container-fluid
          a.navbar-brand(href='#') Sistema Hospitalario
          button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav')
            span.navbar-toggler-icon
          .collapse.navbar-collapse#navbarNav
            ul.navbar-nav.me-auto
              li.nav-item
                a.nav-link(href='/') Inicio
            ul.navbar-nav.ms-auto
              li.nav-item
                a.nav-link(href='/auth/login' data-spa) Iniciar Sesión
      .container.mt-4
        h1.text-center Sistema Hospitalario General
        .row.mb-4
          .col-md-6.offset-md-3
            label.form-label(for='hospitalSelect') Seleccionar Hospital
            select#hospitalSelect.form-select(data-spa onchange='loadHospitalData(this.value)')
              option(value='') Seleccione un hospital
              // Opciones cargadas dinámicamente con fetch
        #hospitalStats.row.mb-4
          .col-md-3
            .card
              .card-body
                h5.card-title Pacientes Atendidos Hoy
                p#pacientesAtendidos.card-text 0
          .col-md-3
            .card
              .card-body
                h5.card-title Camas Disponibles
                p#camasDisponibles.card-text 0
          .col-md-3
            .card
              .card-body
                h5.card-title Pacientes en Espera
                p#pacientesEspera.card-text 0
          .col-md-3
            .card
              .card-body
                h5.card-title Ambulancias Activas
                p#ambulanciasActivas.card-text 0
        #noticias.row.mb-4
          .col-12
            h3 Noticias
            #noticiasList.card
              .card-body
                p Sin noticias disponibles.
        .row
          .col-12.text-end
            button.btn.btn-warning#reclamosBtn(data-spa onclick='loadReclamos()')
              i.bi.bi-exclamation-triangle-fill
              |  Enviar Reclamo
    script(src='/js/main.js')